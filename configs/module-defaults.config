/*
 * ---------------------------------------------------------
 *  Nextflow config file for module specific default options
 * ---------------------------------------------------------
 */

params {
    modules {
        'bedtools_intersect_regions' {
            args             = ""
            suffix           = ".bed"
            publish_dir      = "bedtools_intersect_regions"
            publish_results  = "all"
        }
        'bedtools_intersect' {
            args             = ""
            suffix           = ".bed"
            publish_dir      = "bedtools_intersect"
            publish_results  = "all"
        }
        'bedtools_subtract' {
            args             = ""
            suffix           = ".bed"
            publish_dir      = "bedtools_subtract"
            publish_results  = "all"
        }
        'fastqc' {
            args             = ""
            suffix           = ""
            publish_dir      = "fastqc"
            publish_results  = "all"
        }
        'cutadapt' {
            args             = ""
            suffix           = ".trimmed"
            publish_dir      = "cutadapt"
            publish_results  = "all"
        }
        'hisat2_splice_align' {
            args             = "--phred33 --dta-cufflinks"
            suffix           = ".aligned"
            publish_dir      = "hisat2"
            publish_results  = "all"
        }
        'hisat2_align' {
            args             = "--phred33 --dta-cufflinks"
            suffix           = ".aligned"
            publish_dir      = "hisat2"
            publish_results  = "all"
        }
        'hisat2_build' {
            args             = ""
            prefix           = "index"
            publish_dir      = "hisat2"
            publish_results  = "all"
            index_dir        = "hisat2_index"
        }
        'hisat2_splice_sites' {
            args             = ""
            prefix           = "splice_sites"
            suffix           = ".txt"
            publish_dir      = "hisat2"
            publish_results  = "all"
        }
        'samtools_sort' {
            args             = ""
            suffix           = "_sorted.bam"
            publish_dir      = "samtools_sort"
            publish_results  = "all"
        }
        'samtools_view' {
            args             = "-b -h"
            suffix           = ".bam"
            publish_dir      = "samtools_view"
            publish_results  = "all"
            samtools_view_region = ""
        }
        'samtools_index' {
            args             = ""
            suffix           = ".bam.bai"
            publish_dir      = "samtools_index"
            publish_results  = "all"
        }
        'samtools_faidx' {
            args             = ""
            publish_dir      = "samtools_faidx"
            publish_results  = "all"
        }
        'guppy_basecaller' {
            args = "--compress_fastq --records_per_fastq 0"
            publish_dir      = "guppy"
            publish_results  = "all"
            flowcell         = "FLO-MIN106"
            kit              = "SQK-RAD002"
            num_callers      = 1
            cpu_threads_per_caller = 1
            chunk_size       = 2000
            chunks_per_caller = 10000
            chunks_per_runner = 512
            gpu_runners_per_device = 4
        }
        'guppy_qc' {
            args             = ""
            suffix           = ""
            publish_dir      = "guppy_qc"
            publish_results  = "all"
        }
        'minionqc' {
            args             = "-f pdf"
            suffix           = ""
            publish_dir      = "minionqc"
        }
        'flye' {
            args             = ""
            suffix           = ""
            publish_dir      = "flye"
            publish_results  = "all"
            genome_size      = 0
        }
        'minimap2' {
            args             = ""
            suffix           = ".aligned"
            publish_dir      = "minimap2"
            publish_results  = "all"
        }
        'bowtie2_align' {
            args             = ""
            suffix           = ""
            publish_dir      = "bowtie2"
            publish_results  = "all"
        }
        'bowtie2_build' {
            args             = ""
            publish_dir      = "bowtie2_index"
            publish_results  = "all"
        }
        'tantan' {
            args             = ""
            publish_dir      = "tantan"
            publish_results  = "all"
            max_period       = 100
        }
        'tantan_to_GFF3' {
            args             = ""
            publish_dir      = "tantan_to_GFF3"
            publish_results  = "all"
        }
        'star_genome_generate' {
            args             = ""
            publish_dir      = "star_genome_generate"
            publish_results  = "all"
            sjdbGTFfile          = ""
            sjdbFileChrStartEnd  = ""
            varVCFfile           = ""
        } 
        'star_align_reads' {
            args                 = ""
            publish_dir          = "star_align_reads"
            publish_results      = "all"
            sjdbGTFfile          = ""
            sjdbFileChrStartEnd  = ""
            varVCFfile           = ""
        }    
        'velocyto_run_smartseq2' {
            args             = ""
            publish_dir      = "velocyto"
            publish_results  = "all"
        }
        'htseq_count' {
            args             = "-f bam -s no -m union"
            suffix           = ".txt"
            publish_dir      = "htseq_count"
            publish_results  = "all"
        }
        'homer_annotate_peaks' {
            args             = "-gid"
            suffix           = ".annotated.txt"
            publish_dir      = "homer_annotate_peaks"
            publish_results  = "all"
        }
        'get_crosslinks' {
            suffix           = ".xl"
            publish_dir      = "get_crosslinks"
            publish_results  = "all"
        }
        'get_crosslinks_coverage' {
            suffix           = ".bedgraph"
            publish_dir      = "get_crosslinks_coverage"
            publish_results  = "all"
        }
    }
}
