/*
 * ---------------------------------------------------------
 *  Nextflow config file for module specific default options
 * ---------------------------------------------------------
 */

params {
    modules {
        'bedtools_intersect' {
            args             = ""
            suffix           = ".annotated"
            publish_dir      = "bedtools_intersect"
            publish_results  = "all"
        }
        'guppy_basecaller' {
						args = "--compress_fastq --save_path . --records_per_fastq 0"
            publish_dir      = "guppy"
            publish_results  = "all"
            flowcell         = "FLO-MIN106"
            kit              = "SQK-RAD002"
						num_callers      = 1
						cpu_threads_per_caller = 1
						chunk_size       = 1000
						chunks_per_caller = 1000
						chunks_per_runner = 256
						gpu_runners_per_device = 1
        }
        'guppy_qc' {
            args             = ""
            suffix           = ""
            publish_dir      = "guppy_qc"
            publish_results  = "all"
        }
        'minionqc' {
            args             = "-f pdf"
            suffix           = ""
            publish_dir      = "minionqc"
        }
        'flye' {
            args             = ""
            suffix           = ""
            publish_dir      = "flye"
            publish_results  = "all"
            genome_size      = 0
        }
        'minimap2' {
            args             = ""
            suffix           = ".aligned"
            publish_dir      = "minimap2"
            publish_results  = "all"
        }
        'bowtie2_align' {
            args             = ""
            suffix           = ""
            publish_dir      = "bowtie2"
            publish_results  = "all"
        }
        'bowtie2_build' {
            args             = ""
            publish_dir      = "bowtie2_index"
            publish_results  = "all"
        }
    }
}
